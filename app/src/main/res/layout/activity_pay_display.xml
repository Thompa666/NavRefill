        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="392dp" />

    <Button
        android:id="@+id/homebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
